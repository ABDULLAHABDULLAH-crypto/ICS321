<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminActivity">

    <Button
        android:id="@+id/btnAddTourment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Tourment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteTourment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete Tourment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddTeam"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/AddTeam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddTourment" />

</androidx.constraintlayout.widget.ConstraintLayout>